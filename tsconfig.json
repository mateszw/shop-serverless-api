{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2020",
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts",
    "src/product-service/serverless.ts",
    "src/import-service/serverless.ts",
    "src/common/*",
    "src/product-service/libs"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*.test.*",
    "**/__tests__/*"
  ]
}
